  <table id="gradesTable"></table>\
\
  <button class="logout" onclick="logout()">Logout</button>\
</div>\
\
<div class="card hidden" id="teacherDash">\
  <h2>Teacher Dashboard</h2>\
\
  <h3>Students</h3>\
  <table>\
    <thead>\
      <tr>\
        <th>ID</th>\
        <th>Name</th>\
        <th>Grade</th>\
        <th>Action</th>\
      </tr>\
    </thead>\
