<script>\
/* ===== DATABASE ===== */\
const students = \{\
  "1001": \{ password:"studentpass", name:"Alex Carter", gradeLevel:"10", gpa:"3.6", grades:\{Math:"A", English:"B+", Science:"A-", History:"B"\} \},\
  "1002": \{ password:"math123", name:"Jamie Lee", gradeLevel:"11", gpa:"3.9", grades:\{Math:"A+", English:"A", Science:"A", History:"A-"\} \}\
\};\
\
const teachers = \{\
  "teacher@school.edu": \{ password:"teachpass" \},\
  "admin@school.edu": \{ password:"admin123" \}\
\};\
\
/* ===== LOGIN ===== */\
function login() \{\
  const id = document.getElementById('loginId').value.trim();\
  const pass = document.getElementById('loginPass').value;\
\
  if(students[id] && students[id].password===pass)\{ showStudent(id); return; \}\
  if(teachers[id] && teachers[id].password===pass)\{ showTeacher(); return; \}\
\
  alert("Invalid credentials");\
\}\
\
/* ===== STUDENT DASHBOARD ===== */\
function showStudent(id)\{\
  document.getElementById('login').classList.add('hidden');\
  document.getElementById('studentDash').classList.remove('hidden');\
\
  const s = students[id];\
  document.getElementById('studentInfo').innerHTML=`\
    <p><strong>Name:</strong> $\{s.name\}</p>\
    <p><strong>ID:</strong> $\{id\}</p>\
    <p><strong>Grade Level:</strong> $\{s.gradeLevel\}</p>\
    <p><strong>GPA:</strong> $\{s.gpa\}</p>\
  `;\
\
  let rows="<tr><th>Course</th><th>Grade</th></tr>";\
  for(let c in s.grades) rows+=`<tr><td>$\{c\}</td><td>$\{s.grades[c]\}</td></tr>`;\
  document.getElementById('gradesTable').innerHTML=rows;\
\}\
\
/* ===== TEACHER DASHBOARD ===== */\
function showTeacher()\{\
  document.getElementById('login').classList.add('hidden');\
  document.getElementById('teacherDash').classList.remove('hidden');\
\
  const list = document.getElementById('studentList');\
  list.innerHTML="";\
\
  for(let id in students)\{\
    const s=students[id];\
    list.innerHTML+=`\
      <tr>\
        <td>$\{id\}</td>\
        <td>$\{s.name\}</td>\
        <td>$\{s.gradeLevel\}</td>\
        <td><button onclick="viewStudent('$\{id\}')">View</button></td>\
      </tr>\
    `;\
  \}\
\}\
\
function viewStudent(id)\{\
  const s=students[id];\
  let gradeRows="";\
  for(let c in s.grades) gradeRows+=`<tr><td>$\{c\}</td><td>$\{s.grades[c]\}</td></tr>`;\
\
  const view = document.getElementById('teacherView');\
  view.classList.remove('hidden');\
  view.innerHTML=`\
    <h3>Student Profile</h3>\
    <p><strong>Name:</strong> $\{s.name\}</p>\
    <p><strong>ID:</strong> $\{id\}</p>\
    <p><strong>GPA:</strong> $\{s.gpa\}</p>\
    <table>\
      <tr><th>Course</th><th>Grade</th></tr>\
      $\{gradeRows\}\
    </table>\
  `;\
\}\
\
/* ===== LOGOUT ===== */\
function logout()\{ location.reload(); \}\
</script>\
\
</body>\
